{
  "name": "@t09tanaka/ts-rename-helper-mcp",
  "version": "0.1.0",
  "description": "MCP server for TypeScript symbol renaming and file/directory move planning",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ts-rename-helper-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "typescript",
    "rename",
    "refactor",
    "language-server"
  ],
  "author": "t09tanaka",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript-eslint": "^8.18.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
